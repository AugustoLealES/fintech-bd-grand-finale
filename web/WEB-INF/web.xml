<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>splash.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlets -->
    <servlet>
        <servlet-name>ContaBancariaServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.ContaBancariaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContaBancariaServlet</servlet-name>
        <url-pattern>/conta</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.ClienteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmprestimoServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.EmprestimoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmprestimoServlet</servlet-name>
        <url-pattern>/emprestimo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InvestimentoServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.InvestimentoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InvestimentoServlet</servlet-name>
        <url-pattern>/investimento</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReceitaServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.ReceitaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceitaServlet</servlet-name>
        <url-pattern>/receita</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DespesaServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.DespesaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DespesaServlet</servlet-name>
        <url-pattern>/despesa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.fiap.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>



</web-app>